@model List<Product>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i>Agregar Nuevo</a>
</p>

<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
@if (Model != null)
{
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading"> <h3>Productos</h3> </div>
                <div class="panel-body">
                    <table class="table table-hover table-responsive table-striped table-bordered" id="MyTable">
                        <thead>
                            <tr>
                                <td>Name</td>
                                <td>Imagen</td>
                                <td>Eliminar Imagen</td>
                                <td></td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr width="100%">
                                    <td width="33%">@item.Name</td>
                                    <td width="33%"><img src="https://demomanejoimagenes.blob.core.windows.net/products/@item.UrlImage" style="width:50px;height:50px;max-width: 100%; height: auto;" /> </td>
                                   
                                    <td width="34%">
                                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-1" onclick="return confirm('¿Está seguro que desea archivar este producto?');">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}